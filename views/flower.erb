<div class ="row">
    <div class="col-sm"
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%= @flower[:image_url]%>" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"><%= @flower[:common_name] %></h5>
                <p class="card-text"><%= @flower[:latin_name]%></p>
            </div>
        </div>
    </div>

    <div class="col-sm">
       <div class="input-group mb-3">
           <form method="POST" action="/flower/sighting">
            <input type="text" class="form-control" placeholder="Sighting location" aria-label="Sighting location" aria-describedby="button-addon2" name="location">
            <input type="hidden" value="<%= @flower[:common_name]%>" name="flower_name">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">+</button>
            </div>
           </form>
        </div>
    </div>
</div>
<div class="container">
    <h2> Recent Sightings: </h2>
    <% @sightings.each do |sighting| %>
    <div class="row">
        <div class="col-sm">
            Seen at <a href="/location/<%=sighting[:location]%>"><%= sighting[:location] %></a> by <a href="/person/<%=sighting[:person]%>"><%= sighting[:person] %></a> on <%= sighting[:date] %>
        </div>
    </div>
    <% end %>
</div>
