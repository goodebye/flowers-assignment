<div class="row">
    <form method="POST" action="/flower/<%=@flower[:url]%>/edit">
        <div class="form-group">
            <label >Genus</label>
            <input class="form-control" id="genus" aria-describedby="genus" name="genus" placeholder="Enter new genus" value="<%=@flower[:latin_name].split[0]%>">
        </div>
        <div class="form-group">
            <label >Species</label>
            <input class="form-control" name="species" id="species" aria-describedby="species" placeholder="Enter new species" value="<%=@flower[:latin_name].split[1]%>">
        </div>
        <div class="form-group">
            <label >Common name</label>
            <input class="form-control" name="common_name" id="common_name" aria-describedby="common_name" placeholder="Enter new common name" value="<%=@flower[:common_name]%>">
        </div>

        <div class="form-group">
                <input type="hidden" name="old_common_name" value="<%= @flower[:common_name]%>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
